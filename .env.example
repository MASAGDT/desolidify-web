# .env.example
# desolidify-web :: environment configuration template

# ── App metadata ───────────────────────────────────────────────────────────────
APP_VERSION=0.1.0
FLASK_ENV=development
SECRET_KEY=change-me-in-production

# ── Paths ─────────────────────────────────────────────────────────────────────
# Jobs/workspace root (each job gets its own UUID directory)
JOBS_ROOT=/app/jobs

# Frontend (served by Flask)
FRONTEND_PUBLIC=/app/frontend/public
FRONTEND_VENDOR=/app/frontend/vendor

# ── Uploads & limits ──────────────────────────────────────────────────────────
# Max upload size in MB
MAX_CONTENT_LENGTH_MB=100
# Comma-separated allowed extensions (lowercase, without dot)
ALLOWED_EXTENSIONS=stl

# ── CORS ──────────────────────────────────────────────────────────────────────
# In development you can leave this as '*'. In production set allowed origins.
CORS_ORIGINS=*

# ── Socket.IO ─────────────────────────────────────────────────────────────────
SOCKETIO_ASYNC_MODE=eventlet
SOCKETIO_CORS_ALLOWED_ORIGINS=*
SOCKETIO_LOGGER=0
SOCKETIO_ENGINEIO_LOGGER=0
SOCKETIO_PING_INTERVAL=25
SOCKETIO_PING_TIMEOUT=60

# ── Queue / Workers ───────────────────────────────────────────────────────────
QUEUE_BACKEND=thread
# Keep this low to prevent OOM on single-box deployments
MAX_WORKERS=1

# ── Retention ─────────────────────────────────────────────────────────────────
# Delete job folders older than N hours (via `flask purge-jobs` or cron)
JOB_RETENTION_HOURS=6

# ── Engine safety bounds (server-side) ────────────────────────────────────────
ENGINE_MAX_CHUNK_PTS=2500000
ENGINE_MAX_VOXEL=1.2
ENGINE_MIN_VOXEL=0.2
